{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2015",
    "sourceMap": false,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "baseUrl": "./",
    "paths": {
      "@curvefi/*": [
        "node_modules/@curvefi/*"
      ],
      "@uniswap/*": [
        "node_modules/@uniswap/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-tansform-paths"
      },
      {
        "transform": "typescript-tansform-paths",
        "afterDeclarations": true
      }
    ]
  },
  "include": [
    "src/**/*"
  ]
}
